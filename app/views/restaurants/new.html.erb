<%= simple_form_for(@restaurant) do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :phone_number %>
  <%= f.select :category, options_for_select(%w(belgian chinese french italian japanese)) %>
  <%= f.submit %>
<% end %>

<%= link_to 'back', restaurants_path, class: "btn btn-primary" %>
